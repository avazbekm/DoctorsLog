<Page  x:Class="DoctorsLog.Pages.Dashboard"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d">

    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#8ba8c8" Offset="0.0"/>
                <GradientStop Color="#FCE4EC" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border CornerRadius="10">
            <Border.Background>
                <ImageBrush ImageSource="/Resources/bg-dna.jpg" Opacity="0.5"  Stretch="UniformToFill"/>
            </Border.Background>

            <!-- Content -->
            <StackPanel Margin="30" VerticalAlignment="Top">
                <WrapPanel Margin="0,0,0,20" ItemWidth="200" ItemHeight="100">
                    <Border Background="#b0cbff" CornerRadius="10" Padding="15" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Bugungi bemorlar" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="tbCountPatientsForTheDay" FontSize="24" FontWeight="Bold" Foreground="#0D47A1"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#C8E6C9" CornerRadius="10" Padding="15" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Muolaja uchun" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="tbCountRcipeForTheDay" FontSize="24" FontWeight="Bold" Foreground="#1B5E20"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFECB3" CornerRadius="10" Padding="15" Margin="10">
                        <StackPanel>
                            <TextBlock Text="Yotoq rejimi" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="7 ta" FontSize="24" FontWeight="Bold" Foreground="#F57F17"/>
                        </StackPanel>
                    </Border>

                </WrapPanel>
                <GroupBox Header="📅 Bugun kelishi tavsiya etilgan bemorlar" Margin="10">
                    <Grid>
                        <!-- Blur fon qatlami -->
                        <Rectangle RadiusX="6" RadiusY="6">
                            <Rectangle.Fill>
                                <VisualBrush Visual="{Binding RelativeSource={RelativeSource AncestorType=Page}}"/>
                            </Rectangle.Fill>
                            <Rectangle.Effect>
                                <BlurEffect Radius="12"/>
                            </Rectangle.Effect>
                        </Rectangle>

                        <!-- Ustki kontent -->
                        <ListView x:Name="lvUpcomingAppointments"
                                    Background="#66FFFFFF"
                                    BorderThickness="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="22"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Ism familiyasi" Width="250"
                                DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Telefon raqami" Width="160"
                                DisplayMemberBinding="{Binding Phone}" />
                                    <GridViewColumn Header="So'nggi tashrifi" Width="160"
                                DisplayMemberBinding="{Binding CreatedAt}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                </GroupBox>
            </StackPanel>
        </Border>
    </Border>
</Page>
