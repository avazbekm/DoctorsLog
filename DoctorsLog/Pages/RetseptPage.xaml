<Page x:Class="DoctorsLog.Pages.RetseptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DoctorsLog.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RetseptPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <ComboBox x:Name="PatientsComboBox" Width="200" Margin="0,0,10,0"
                      md:HintAssist.Hint="Bemor tanlash"
                      Style="{DynamicResource MaterialDesignFloatingHintComboBox}" />
            <Button Content="Qo'shish" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Border CornerRadius="8" Background="#FFFFFF" Margin="0 5">
                    <TextBox x:Name="tbDrug"
                             Padding="10 5"
                             MinWidth="250"
                             FontSize="16"
                             md:HintAssist.Hint="Dori nomi"
                             Style="{DynamicResource MaterialDesignTextBox}"
                             BorderThickness="0"
                             Background="Transparent" />
                </Border>
                <Button Content="+" Width="150" Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="5 5" />
            </StackPanel>

            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1">
                <DataGrid x:Name="DrugsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          RowBackground="#F9F9F9" AlternatingRowBackground="#F0F0F0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="T/r" Width="50"/>
                        <DataGridTextColumn Header="Dori nomi" Width="*"/>
                        <DataGridTemplateColumn Header="Amallar" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="O'zgartirish" Background="#6A9B9B" Margin="0,0,5,0" />
                                        <Button Content="O'chirish" Background="#F44336" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>