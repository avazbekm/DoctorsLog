<Window x:Class="DoctorsLog.Windows.HistoryPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoctorsLog.Windows"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="HistoryPatientWindow" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="10" Padding="15" Background="Snow" BorderBrush="#D3DDE6" BorderThickness="1" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <WrapPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Ismi:" FontSize="16" Foreground="#666666" Margin="0,0,10,5"/>
                    <TextBlock x:Name="tbFirstName" FontWeight="Medium" FontSize="16" Margin="5 0 25 0" Foreground="#333333"/>
                    <TextBlock Text="Familiya:" FontSize="16" Foreground="#666666"/>
                    <TextBlock x:Name="tbLastName" FontWeight="Medium" FontSize="16" Margin="5 0 25 0" Foreground="#333333"/>
                    <TextBlock Text="Tug'ilgan sana:" FontSize="16" Foreground="#666666"/>
                    <TextBlock x:Name="tbBithday" FontWeight="Medium" FontSize="16" Margin="5 0 25 0" Foreground="#333333"/>
                    <TextBlock Text="Manzil:" FontSize="16" Foreground="#666666"/>
                    <TextBlock x:Name="tbAddress" FontWeight="Medium" FontSize="16" Margin="5 0 25 0" Foreground="#333333"/>
                    <TextBlock Text="Telefon:" FontSize="16" Foreground="#666666"/>
                    <TextBlock x:Name="tbPhone" FontWeight="Medium" FontSize="16" Margin="5 0" Foreground="#333333"/>
                </WrapPanel>
                
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- DataGrid -->
            <Border x:Name="HistoryDataGridBorder"
    CornerRadius="10"
    Padding="15"
    Background="#FFFFFF"
    BorderBrush="#D3DDE6"
    BorderThickness="1">
                <DataGrid x:Name="HistoryDataGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          HeadersVisibility="Column"
          GridLinesVisibility="Horizontal"
          RowBackground="#F9F9F9"
          AlternatingRowBackground="#F0F0F0"
          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="T/r" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Retsept sanasi" Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" Width="200"/>
                        <DataGridTemplateColumn Header="Retsep nomi" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnWroteHistoryRetsep" Content="{Binding Title}"
                                            Click="RecipeNameButton_Click" Foreground="Red"
                                            Tag="{Binding Id}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Tugma overlay qilingan -->
            <Button x:Name="btnNewRetsep" 
            Content="Yangi retsep qo'shish" 
            Background="#D4D8DB" 
            Margin="10"
            md:ButtonAssist.CornerRadius="8"
            Click="BtnNewRetsep_Click" 
            BorderThickness="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            />

            <Frame x:Name="MainFrame" Visibility="Collapsed"  NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>