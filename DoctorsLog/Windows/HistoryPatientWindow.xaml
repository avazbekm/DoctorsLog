<Window x:Class="DoctorsLog.Windows.HistoryPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoctorsLog.Windows"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="HistoryPatientWindow" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="10" Padding="15" Background="#FFFFFF" BorderBrush="#D3DDE6" BorderThickness="1" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="PatientNameTextBlock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="PatientDateOfBirthTextBlock"
                           FontSize="14"
                           Foreground="#666666"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" CornerRadius="10" Padding="15" Background="#FFFFFF" BorderBrush="#D3DDE6" BorderThickness="1">
            <DataGrid x:Name="HistoryDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      RowBackground="#F9F9F9"
                      AlternatingRowBackground="#F0F0F0"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="T/r" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Retsep sanasi" Binding="{Binding ReceiptDate, StringFormat='yyyy-MM-dd HH:mm'}" Width="200"/>
                    <DataGridTemplateColumn Header="Retsep nomi" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding ReceiptName}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        Click="ReceiptNameButton_Click"
                                        Tag="{Binding Id}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="PrintButton"
                    Content="Pechat"
                    FontSize="16"
                    Height="35"
                    Background="#2196F3"
                    Foreground="White"
                    md:ButtonAssist.CornerRadius="8"
                    BorderThickness="0"
                    Click="PrintButton_Click"/>
        </StackPanel>
    </Grid>
</Window>