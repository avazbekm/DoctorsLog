<Window x:Class="DoctorsLog.Windows.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoctorsLog.Windows"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Aktivatsiya" Height="350" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Device ID -->
            <RowDefinition Height="Auto"/>
            <!-- Token input -->
            <RowDefinition Height="*"/>
            <!-- Status -->
            <RowDefinition Height="Auto"/>
            <!-- Contact info -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Trial muddati tugadi"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>

        <!-- Device ID + Copy -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,20,0,20">
            <TextBlock x:Name="DeviceIdText"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryHueDarkBrush}"
                       VerticalAlignment="Center"/>
            <Button Content="📋 Nusxa olish"
                    Click="CopyDeviceId_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="15,0,0,0"/>
        </StackPanel>

        <!-- Token input + Aktivatsiya tugma -->
        <DockPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBox x:Name="TokenBox"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     md:HintAssist.Hint="Token kiriting"
                     Margin="0,0,10,0"
                     Width="300"
                     DockPanel.Dock="Left"
                     md:HintAssist.Foreground="Gray"/>
            <Button x:Name="ActivateButton"
                    Content="Aktivatsiya"
                    Click="Activate_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="140"
                    DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Status text -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="3"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Foreground="Red"
                   Visibility="Collapsed"/>

        <!-- Contact info -->
        <StackPanel Grid.Row="4" Margin="0,20,0,0" HorizontalAlignment="Center">
            <TextBlock Text="⚠️ Foydalanishda davom etish uchun ishlab chiquvchi bilan bog‘laning."
                       TextAlignment="Center"
                       FontSize="14"/>
            <TextBlock Text="📞 Telefon: +998 97 334 03 34"
                       Foreground="DarkBlue"
                       FontSize="13"
                       TextAlignment="Center"
                       Cursor="Hand"
                       Margin="0,10,0,10"
                       MouseLeftButtonUp="PhoneTextBlock_MouseLeftButtonUp"/>

            <TextBlock>
                <Hyperlink NavigateUri="t.me/ovoza_robot"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    🤖 Telegram bot: @ovoza_robot
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
