<Window x:Class="DoctorsLog.Windows.SuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoctorsLog.Windows"
        Title="SuccessDialog"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="200" Height="200"
        ResizeMode="NoResize">
    <Grid>
        <!-- Yashil aylana -->
        <Ellipse Width="160" Height="160" Fill="#4CAF50"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <ScaleTransform x:Name="CircleScale" ScaleX="0" ScaleY="0"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <!-- Ptichka belgisi -->
        <TextBlock x:Name="CheckMark"
                   Text="✔"
                   FontSize="72"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="0"
                   RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <ScaleTransform x:Name="CheckScale" ScaleX="0" ScaleY="0"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- Animatsiyalar -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <!-- Aylana scale -->
                        <DoubleAnimation Storyboard.TargetName="CircleScale"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="0" To="1" Duration="0:0:0.3" />
                        <DoubleAnimation Storyboard.TargetName="CircleScale"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="0" To="1" Duration="0:0:0.3" />

                        <!-- Ptichka scale -->
                        <DoubleAnimation Storyboard.TargetName="CheckScale"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="0" To="1" Duration="0:0:0.3" BeginTime="0:0:0.3"/>
                        <DoubleAnimation Storyboard.TargetName="CheckScale"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="0" To="1" Duration="0:0:0.3" BeginTime="0:0:0.3"/>

                        <!-- Ptichka opacity -->
                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.2" BeginTime="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>
