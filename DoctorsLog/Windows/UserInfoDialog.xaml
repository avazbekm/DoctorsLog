<Window x:Class="DoctorsLog.Windows.UserInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Foydalanuvchi ma'lumotlari"
        Height="330" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tushuntiruvchi matn -->
        <TextBlock Grid.Row="0"
                   Text="Iltimos, F.I.O va Email ma'lumotlaringizni kiriting. 
Bu ma'lumot ishonchlilik va dastur bilan ishlash jarayonida zarur bo‘ladi.
Ushbu oyna faqat birinchi marta ko‘rsatiladi."
                   TextWrapping="Wrap"
                   Margin="0 0 0 15"
                   FontSize="14"
                   Foreground="Gray"/>

        <!-- F.I.O -->
        <TextBox Grid.Row="1"
                 x:Name="FullNameTextBox"
                 Margin="0 10 0 0"
                 md:HintAssist.Hint="F.I.O"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="14"
                 md:HintAssist.Foreground="Gray"/>

        <!-- Email -->
        <TextBox Grid.Row="2"
                 x:Name="EmailTextBox"
                 Margin="0 10 0 0"
                 md:HintAssist.Hint="Email"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="14"
                 md:HintAssist.Foreground="Gray"/>

        <!-- Tugmalar -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 15 0 0">
            <Button Content="Saqlash"
                    Width="90"
                    Margin="5"
                    Style="{StaticResource MaterialDesignFlatDarkButton}"
                    Click="Save_Click"/>
            <Button Content="Chiqish"
                    Width="90"
                    Margin="5"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
