                                <TextBlock x:Name="SettingsText" Text="Sozlash"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="#334257"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="InfoCardsPanel" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1"
                            Width="150" Height="80" Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Bemorlar soni" Foreground="#888" FontSize="12"/>
                            <TextBlock x:Name="PatientsCountText" Text="0" Foreground="#334257" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1"
                            Width="150" Height="80">
                        <StackPanel>
                            <TextBlock Text="Retseptlar soni" Foreground="#888" FontSize="12"/>
                            <TextBlock x:Name="PrescriptionsCountText" Text="0" Foreground="#334257" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <ContentControl Grid.Row="1" x:Name="MainContentControl">
                    <Grid x:Name="PatientsView">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <Border CornerRadius="8" Background="#FFFFFF">
                                <TextBox x:Name="tbSearch"
                                      Padding="10 5"
                                      Width="265"
                                      FontSize="16"
                                      md:HintAssist.Hint="Qidiruv"
                                      Style="{DynamicResource MaterialDesignTextBox}"
                                      BorderThickness="0"
                                      Background="Transparent" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 10">
                            <Border CornerRadius="8" Background="#FFFFFF">
                                <TextBox x:Name="tbName"
                                         Padding="10 5"
                                         MinWidth="110"
                                         FontSize="16"
                                         md:HintAssist.Hint="Ismi"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 0">
                                <TextBox x:Name="tbLastName"
                                         Padding="10 5"
                                         MinWidth="110"
                                         FontSize="16"
                                         md:HintAssist.Hint="Familiya"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent" 
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <!-- Tug‘ilgan sana -->
                            <StackPanel Orientation="Horizontal" Margin="0" Background="#F0F4F8">
                                <TextBlock Text="Tug‘ilgan sana" FontSize="16" Width="110" VerticalAlignment="Center"/>
                                <Border CornerRadius="7" Margin="5 0" Background="#FFFFFF">
                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtBirthDate" Padding="5 0" BorderThickness="0" Background="#FFFFFF" Width="100" Height="30" FontSize="15" Style="{StaticResource MaterialDesignOutlinedTextBox}" VerticalContentAlignment="Center" PreviewTextInput="DateTextBox_PreviewTextInput" KeyDown="TextBox_KeyDown" TextChanged="DateTextBox_TextChanged"/>
                                        <Button Grid.Column="1" Content="📆" Width="20" Height="20" Padding="0" BorderThickness="0" Margin="3,0,7,0" Background="#E6EEF4" Click="btnBirthCalendar_Click"/>
                                        <Popup x:Name="popupBirthDate" PlacementTarget="{Binding ElementName=txtBirthDate}" StaysOpen="False">
                                            <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                                <Calendar x:Name="calendarBirthDate" SelectedDatesChanged="calendarBirthDate_SelectedDatesChanged"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 0">
                                <TextBox x:Name="tbAddress"
                                         Padding="10 5"
                                         MinWidth="150"
                                         FontSize="16"
                                         md:HintAssist.Hint="Manzil"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent" 
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 0">
                                <TextBox x:Name="tbPhone"
                                         Padding="10 5"
                                         MinWidth="155"
                                         FontSize="16"
                                         md:HintAssist.Hint="+998 "
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent" 
                                         TextChanged="tbPhone_TextChanged" 
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <Button x:Name="btnSave" Content="Saqlash" Background="#D4D8DB" Margin="5 0" BorderThickness='0'/>
                        </StackPanel>

                        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1">
                            <DataGrid x:Name="PatientsDataGrid"  AutoGenerateColumns="False"
                                      IsReadOnly="True" HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      RowBackground="#F9F9F9"
                                      AlternatingRowBackground="#F0F0F0" SelectionChanged="PatientsDataGrid_SelectionChanged_1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="T/r" Binding="{Binding TartibNomer}" Width="50"/>
                                    <DataGridTextColumn Header="Ismi" Binding="{Binding FirstName}" Width="*"/>
                                    <DataGridTextColumn Header="Familiyasi" Binding="{Binding LastName}" Width="*"/>
                                    <DataGridTextColumn Header="Tug'ilgan yili" Binding="{Binding DateOfBirth}" Width="*"/>
                                    <DataGridTextColumn Header="Manzili" Binding="{Binding Address}" Width="*"/>
                                    <DataGridTextColumn Header="Telefoni" Binding="{Binding PhoneNumber}" Width="*"/>
                                    <DataGridTemplateColumn Header="Amallar" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="O'zgartirish" Background="#6A9B9B" Margin="0,0,5,0"/>
                                                    <Button Content="O'chirish" Background="#F44336"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D3DDE6"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>
    </Window.Resources>
</Window>