<Window x:Class="DoctorsLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DoctorsLog"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Doctor's Log" Height="600" Width="1030">

    <Grid Background="#F0F4F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#8BA8C8" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Yon panel -->
            <Border x:Name="SideNavPanel" Grid.Column="0" Width="50" Background="#E6EEF4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Collapse/Expand tugmasi -->
                    <Button Grid.Row="0" x:Name="CollapseExpandButton"
                    Click="CollapseExpandButton_Click"
                    Background="Transparent" BorderThickness="0"
                    HorizontalAlignment="Right"
                    Width="20" Padding="0" Margin="0 0 12 0">
                        <Path x:Name="ArrowIcon" Fill="#334257"
                      Data="{StaticResource ChevronRightIcon}"
                      RenderTransformOrigin="0.5,0.5"
                      Stretch="Uniform" Width="10">
                            <Path.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Path.RenderTransform>
                        </Path>
                    </Button>

                    <!-- Navigatsiya tugmalari -->

                    <StackPanel Grid.Row="1" Margin="0,0,0,0">
                        <Button x:Name="btnDashboart" 
                                Click="DashboardButton_Click" 
                                Background="#D4DBE1"            
                                BorderThickness="0"
                            HorizontalAlignment="Stretch" 
                                Margin="5 15 5 0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="#334257" Width="25" Height="25" Data="{StaticResource DashboardIcon}" />
                                <TextBlock x:Name="DashboardText" Text="Dashboard"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#334257"
                                   VerticalAlignment="Center"
                                   Margin="15,0,0,0"
                                   Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="PatientsButton" Click="PatientsButton_Click"
                        Background="#D4DBE1" BorderThickness="0"
                        HorizontalAlignment="Stretch" Margin="5 15" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="#334257" Width="25" Height="25" Data="{StaticResource UserIcon}" />
                                <TextBlock x:Name="PatientsText" Text="Bemorlar"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#334257"
                                   VerticalAlignment="Center"
                                   Margin="15,0,0,0"
                                   Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="PrescriptionButton" Click="PrescriptionButton_Click"
                        Background="#D4DBE1" BorderThickness="0"
                        HorizontalAlignment="Stretch" Margin="5 0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="#334257" Width="25" Height="25" Data="{StaticResource RecipeIcon}" />
                                <TextBlock x:Name="PrescriptionText" Text="Retsept"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#334257"
                                   VerticalAlignment="Center"
                                   Margin="15,0,0,0"
                                   Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="20">
                
                <ContentControl Grid.Row="1" x:Name="MainContentControl">
                    <Grid x:Name="PatientsView" Loaded="PatientsView_Loaded">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <Border CornerRadius="8" Background="#FFFFFF">
                                <TextBox x:Name="tbSearch"
                                      Padding="10 5"
                                      Width="265"
                                      FontSize="16"
                                      md:HintAssist.Hint="Qidiruv.."
                                      Style="{DynamicResource MaterialDesignTextBox}"
                                      BorderThickness="0"
                                      Background="Transparent" TextChanged="TbSearch_TextChanged" />
                            </Border>
                        </StackPanel>
                        <WrapPanel Grid.Row="1" HorizontalAlignment="Left" Margin="0 0 0 10">
                            <Border CornerRadius="8" Background="#FFFFFF" Margin="0 5">
                                <TextBox x:Name="tbFirstName"
                 Padding="10 5"
                 MinWidth="110"
                 FontSize="16"
                 md:HintAssist.Hint="Ismi"
                 Style="{DynamicResource MaterialDesignTextBox}"
                 BorderThickness="0"
                 Background="Transparent"
                 KeyDown="TextBox_KeyDown"/>
                            </Border>

                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 5">
                                <TextBox x:Name="tbLastName"
                 Padding="10 5"
                 MinWidth="110"
                 FontSize="16"
                 md:HintAssist.Hint="Familiya"
                 Style="{DynamicResource MaterialDesignTextBox}"
                 BorderThickness="0"
                 Background="Transparent"
                 KeyDown="TextBox_KeyDown"/>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="5 5" Background="#F0F4F8">
                                <Border CornerRadius="8" Background="#FFFFFF">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="txtBirthDate"
                                                 Padding="10 0"
                                                 BorderThickness="0"
                                                 Background="#FFFFFF"
                                                 Width="110"
                                                 Height="30"
                                                 FontSize="15"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 VerticalContentAlignment="Center"
                                                 PreviewTextInput="DateTextBox_PreviewTextInput"
                                                 KeyDown="TextBox_KeyDown"
                                                 TextChanged="DateTextBox_TextChanged"
                                                 materialDesign:HintAssist.Hint="Tugâ€˜ilgan sana"
                                                 materialDesign:HintAssist.Foreground="Gray"/>

                                        <Button Grid.Column="1"
                                                Content="ðŸ“†"
                                                Width="20"
                                                Height="20"
                                                Padding="0"
                                                BorderThickness="0"
                                                Margin="1,0,7,0"
                                                Background="#E6EEF4"
                                                Click="BtnBirthCalendar_Click"/>

                                        <Popup x:Name="popupBirthDate"
                                               PlacementTarget="{Binding ElementName=txtBirthDate}"
                                               StaysOpen="False">

                                            <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                                <Calendar x:Name="calendarBirthDate"
                                                        SelectedDatesChanged="CalendarBirthDate_SelectedDatesChanged"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <Border CornerRadius="8" Background="#FFFFFF" Margin="1 5">
                                <TextBox x:Name="tbAddress"
                                         Padding="10 5"
                                         MinWidth="150"
                                         FontSize="16"
                                         md:HintAssist.Hint="Manzil"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>

                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 5">
                                <TextBox x:Name="tbPhone"
                                         Padding="5 5"
                                         MinWidth="145"
                                         FontSize="16"
                                         md:HintAssist.Hint="+998 "
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         TextChanged="TbPhone_TextChanged"
                                         KeyDown="TextBox_KeyDown"
                                         PreviewKeyDown="TbPhone_PreviewKeyDown"/>
                            </Border>

                            <Button x:Name="btnSave" Content="Saqlash" Background="#D4D8DB" Margin="5 5" Click="BtnSave_Click" BorderThickness='0'/>
                        </WrapPanel>
                        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1">
                            <DataGrid x:Name="PatientsDataGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      RowBackground="#F9F9F9"
                                      AlternatingRowBackground="#F0F0F0"
                                      SelectionChanged="PatientsDataGrid_SelectionChanged"
                                      LoadingRow="PatientsDataGrid_LoadingRow">

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="T/r" Width="50">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Bold"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Ismi" Binding="{Binding FirstName}" Width="*"/>
                                    <DataGridTextColumn Header="Familiyasi" Binding="{Binding LastName}" Width="*"/>
                                    <DataGridTextColumn Header="Tug'ilgan yili" Binding="{Binding DateOfBirth}" Width="*"/>
                                    <DataGridTextColumn Header="Manzili" Binding="{Binding Address}" Width="*"/>
                                    <DataGridTextColumn Header="Telefoni" Binding="{Binding PhoneNumber}" Width="*"/>
                                    <DataGridTemplateColumn Header="Amallar" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0">
                                                    <Button Content="ðŸ“‹" Background="#6A9B9B" Width="30"  Padding="0"  Margin="0,0,5,0" Click="Button_Click"/>
                                                    <Button Content="âœï¸" Background="#ccb50a" Width="30" Padding="0" Margin="0,0,5,0" Click="BtnEditPatientInfo_Click"/>
                                                    <Button Content="ðŸ—‘" Background="#F44336" Width="30"  Padding="0" Margin="0" Click="BtnDelete_Click"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D3DDE6"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>
    </Window.Resources>
</Window>