<Window x:Class="DoctorsLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:DoctorsLog"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Doctor's Log" Height="600" Width="1000">

    <Grid Background="#F0F4F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#8BA8C8" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SideNavColumn" Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#E6EEF4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" x:Name="CollapseExpandButton"
                            Click="CollapseExpandButton_Click"
                            Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Right"
                            Width="20"
                            Padding="0"
                            Margin="0 0 12 0">
                        <Path x:Name="ArrowIcon" Fill="#334257"
                              Data="M8.59,16.59L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.59Z"
                              RenderTransformOrigin="0.5,0.5" Stretch="Uniform" Width="10"/>
                    </Button>

                    <StackPanel Grid.Row="1" Margin="0,0,0,0">
                        <Button x:Name="PatientsButton"
                                Click="PatientsButton_Click"
                                Background="#D4DBE1" BorderThickness="0"
                                HorizontalAlignment="Stretch" Margin="5 15" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="#334257" Width="20" Height="25"
                                      Margin="0"
                                      Data="M12,2A4,4 0 0,1 16,6A4,4 0 0,1 12,10A4,4 0 0,1 8,6A4,4 0 0,1 12,2M12,12C16.42,12 20,13.79 20,16V22H4V16C4,13.79 7.58,12 12,12Z" />
                                <TextBlock x:Name="PatientsText" Text="Bemorlar"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="#334257"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="PrescriptionButton"
                                Click="PrescriptionButton_Click"
                                Background="#D4DBE1" BorderThickness="0"
                                HorizontalAlignment="Stretch" Margin="5 0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="#334257" Width="20" Height="25"
                                      Margin="0"
                                      Data="M14,2H6C4.89,2 4,2.9 4,4V20C4,21.11 4.89,22 6,22H18C19.11,22 20,21.11 20,20V8L14,2M18,20H6V4H13V9H18V20M12,14C11.66,14 11.34,14.07 11.05,14.21C11.33,14.61 11.5,15.14 11.5,15.68C11.5,16.88 10.5,17.88 9.3,17.88C8.11,17.88 7.11,16.88 7.11,15.68C7.11,14.7 7.7,13.9 8.5,13.5L12,10L15.5,13.5C16.3,13.9 16.89,14.7 16.89,15.68C16.89,16.88 15.89,17.88 14.7,17.88C13.5,17.88 12.5,16.88 12.5,15.68C12.5,15.14 12.67,14.61 12.95,14.21C12.66,14.07 12.34,14 12,14Z" />
                                <TextBlock x:Name="PrescriptionText" Text="Retsept"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="#334257"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>

                        <Button Background="#D4DBE1" BorderThickness="0"
                                HorizontalAlignment="Stretch" Margin="5 15 5 0" Padding="0">
                            <StackPanel Orientation="Horizontal">
                                <Path Fill="#334257" Width="20" Height="25"
                                      Margin="0"
                                      Data="M12,15.5C10.61,15.5 9.5,14.39 9.5,13C9.5,11.61 10.61,10.5 12,10.5C13.39,10.5 14.5,11.61 14.5,13C14.5,14.39 13.39,15.5 12,15.5M19.38,15.35C19.67,16.39 20,17.7 20,18V20H4V18C4,17.7 4.33,16.39 4.62,15.35C5.83,14.47 8.35,14 12,14C15.65,14 18.17,14.47 19.38,15.35M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" />
                                <TextBlock x:Name="SettingsText" Text="Sozlash"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="#334257"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="InfoCardsPanel" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1"
                            Width="150" Height="80" Margin="0,0,20,0">
                        <StackPanel>
                            <TextBlock Text="Bemorlar soni" Foreground="#888" FontSize="12"/>
                            <TextBlock x:Name="PatientsCountText" Text="0" Foreground="#334257" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1"
                            Width="150" Height="80">
                        <StackPanel>
                            <TextBlock Text="Retseptlar soni" Foreground="#888" FontSize="12"/>
                            <TextBlock x:Name="PrescriptionsCountText" Text="0" Foreground="#334257" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <ContentControl Grid.Row="1" x:Name="MainContentControl">
                    <Grid x:Name="PatientsView">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <Border CornerRadius="8" Background="#FFFFFF">
                                <TextBox x:Name="tbSearch"
                                      Padding="10 5"
                                      Width="265"
                                      FontSize="16"
                                      md:HintAssist.Hint="Qidiruv"
                                      Style="{DynamicResource MaterialDesignTextBox}"
                                      BorderThickness="0"
                                      Background="Transparent" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 10">
                            <Border CornerRadius="8" Background="#FFFFFF">
                                <TextBox x:Name="tbName"
                                         Padding="10 5"
                                         MinWidth="110"
                                         FontSize="16"
                                         md:HintAssist.Hint="Ismi"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 0">
                                <TextBox x:Name="tbLastName"
                                         Padding="10 5"
                                         MinWidth="110"
                                         FontSize="16"
                                         md:HintAssist.Hint="Familiya"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent" 
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <!-- Tug‘ilgan sana -->
                            <StackPanel Orientation="Horizontal" Margin="0" Background="#F0F4F8">
                                <TextBlock Text="Tug‘ilgan sana" FontSize="16" Width="110" VerticalAlignment="Center"/>
                                <Border CornerRadius="7" Margin="5 0" Background="#FFFFFF">
                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtBirthDate" Padding="5 0" BorderThickness="0" Background="#FFFFFF" Width="100" Height="30" FontSize="15" Style="{StaticResource MaterialDesignOutlinedTextBox}" VerticalContentAlignment="Center" PreviewTextInput="DateTextBox_PreviewTextInput" KeyDown="TextBox_KeyDown" TextChanged="DateTextBox_TextChanged"/>
                                        <Button Grid.Column="1" Content="📆" Width="20" Height="20" Padding="0" BorderThickness="0" Margin="3,0,7,0" Background="#E6EEF4" Click="btnBirthCalendar_Click"/>
                                        <Popup x:Name="popupBirthDate" PlacementTarget="{Binding ElementName=txtBirthDate}" StaysOpen="False">
                                            <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                                <Calendar x:Name="calendarBirthDate" SelectedDatesChanged="calendarBirthDate_SelectedDatesChanged"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 0">
                                <TextBox x:Name="tbAddress"
                                         Padding="10 5"
                                         MinWidth="150"
                                         FontSize="16"
                                         md:HintAssist.Hint="Manzil"
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent" 
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <Border CornerRadius="8" Background="#FFFFFF" Margin="5 0">
                                <TextBox x:Name="tbPhone"
                                         Padding="10 5"
                                         MinWidth="155"
                                         FontSize="16"
                                         md:HintAssist.Hint="+998 "
                                         Style="{DynamicResource MaterialDesignTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent" 
                                         TextChanged="tbPhone_TextChanged" 
                                         KeyDown="TextBox_KeyDown"/>
                            </Border>
                            <Button x:Name="btnSave" Content="Saqlash" Background="#D4D8DB" Margin="5 0" BorderThickness='0'/>
                        </StackPanel>

                        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" BorderBrush="#D3DDE6" BorderThickness="1">
                            <DataGrid x:Name="PatientsDataGrid"  AutoGenerateColumns="False"
                                      IsReadOnly="True" HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      RowBackground="#F9F9F9"
                                      AlternatingRowBackground="#F0F0F0" SelectionChanged="PatientsDataGrid_SelectionChanged_1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="T/r" Binding="{Binding TartibNomer}" Width="50"/>
                                    <DataGridTextColumn Header="Ismi" Binding="{Binding FirstName}" Width="*"/>
                                    <DataGridTextColumn Header="Familiyasi" Binding="{Binding LastName}" Width="*"/>
                                    <DataGridTextColumn Header="Tug'ilgan yili" Binding="{Binding DateOfBirth}" Width="*"/>
                                    <DataGridTextColumn Header="Manzili" Binding="{Binding Address}" Width="*"/>
                                    <DataGridTextColumn Header="Telefoni" Binding="{Binding PhoneNumber}" Width="*"/>
                                    <DataGridTemplateColumn Header="Amallar" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="O'zgartirish" Background="#6A9B9B" Margin="0,0,5,0"/>
                                                    <Button Content="O'chirish" Background="#F44336"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D3DDE6"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>
    </Window.Resources>
</Window>